		"dotenv": "^17.2.2",
		"hono": "^4.8.2",
		"pino": "^10.1.0",
		"zod": "^4.1.13"
	},
	"devDependencies": {
		"@types/bun": "^1.3.4",
		"@verge/config": "*",
		"pino-pretty": "^13.1.3",
