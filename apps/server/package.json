    "dotenv": "^17.2.2",
    "zod": "^4.1.13",
    "@verge/api": "*",
    "@verge/auth": "*",
    "@verge/db": "*"
  },
  "devDependencies": {
    "@types/bun": "^1.3.4",
    "typescript": "^5",
    "tsdown": "^0.16.5",
    "@verge/config": "*"
  }
}
