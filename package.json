{
	"name": "verge",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"type": "module",
	"scripts": {
		"check": "biome check --write .",
		"prepare": "husky",
		"ruler:apply": "npx @intellectronica/ruler@latest apply --local-only",
		"dev": "turbo dev",
		"build": "turbo build",
		"check-types": "turbo check-types",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"dev:server": "turbo -F server dev",
		"test": "vitest",
		"test:run": "vitest run",
		"test:coverage": "vitest run --coverage"
	},
	"dependencies": {
		"dotenv": "^17.2.2",
		"zod": "^4.1.13"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.0",
		"@types/bun": "^1.3.4",
		"@vitest/coverage-v8": "^4.0.16",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.2",
		"turbo": "^2.6.3",
		"typescript": "^5",
		"vitest": "^4.0.16"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --write ."
		]
	},
	"packageManager": "npm@11.6.2"
}
